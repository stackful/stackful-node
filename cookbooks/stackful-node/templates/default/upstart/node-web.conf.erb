description "node-web server"

start on runlevel [2345]
respawn

setuid <%= node['stackful-node']['user'] %>
setgid stackful

env USER=<%= node["stackful-node"]["user"] %>
env HOME=/home/<%= node["stackful-node"]["user"] %>
chdir <%= node['stackful-node']['app-home'] %>
exec <%= node['stackful-git']['deployer-home'] %>/bin/stackful-web
